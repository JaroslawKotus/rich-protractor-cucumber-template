{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "outDir": "typeScript",
        "typeRoots": ["./node_modules/@types"],
        "types": ["node", "cucumber"],
        "experimentalDecorators": true
    },
    "exclude": [
        "node_modules",
        "typescript"
    ]
}